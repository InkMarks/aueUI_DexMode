<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/windows_action_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_c"
    android:orientation="horizontal">

    <!--窗口栏-->
    <ImageView
        android:id="@+id/window_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="3dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/window_title"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:textColor="@android:color/black"
        android:text="窗口标题"
        android:textSize="14sp"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:layout_weight="1"/>
    <ImageView
        android:id="@+id/menu_min"
        android:layout_width="45dp"
        android:layout_height="32dp"
        android:background="@drawable/windows_menu_item_bg"
        android:padding="10dp"
        android:src="@mipmap/min_window" />

    <ImageView
        android:id="@+id/menu_max"
        android:layout_width="45dp"
        android:layout_height="32dp"
        android:background="@drawable/windows_menu_item_bg"
        android:padding="10dp"
        android:src="@mipmap/max_window" />

    <ImageView
        android:id="@+id/menu_close"
        android:layout_width="45dp"
        android:layout_height="32dp"
        android:background="@drawable/windows_menu_item_close_bg"
        android:padding="10dp"
        android:src="@mipmap/close_window" />
</LinearLayout>