<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">
    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_alignBottom="@+id/imageview"
        android:background="@drawable/view_toprounded_rectangle_layout"/>
    <ImageView
        android:id="@+id/imageview"
        android:layout_width="190dp"
        android:layout_height="133dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/version_update"
        android:contentDescription="@string/app_name"/>
    <TextView
        android:id="@+id/versionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="70dp"
        android:layout_marginTop="-35dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_below="@+id/imageview"
        android:background="@drawable/view_bottomrounded_rectangle_layout"/>
    <TextView
        android:id="@+id/yesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/versionTextView"
        android:layout_marginBottom="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:background="@drawable/ok_button_bg"
        android:text="去应用宝更新"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>
</RelativeLayout>