<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F1F1F1">

    <!--Dex模式设置-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="40dp"
                android:text="DEX设置"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="26sp" />

            <!--<SearchView
                android:id="@+id/sv_cus"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/searchview_line"
                android:iconifiedByDefault="false"
                android:queryBackground="@null"
                android:queryHint="搜索DEX设置选项" />-->


        



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">




                    <LinearLayout
                        android:id="@+id/wallpaper_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="壁纸设置"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:textSize="22sp" />

                        <LinearLayout
                            android:id="@+id/YL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_below="@+id/wallpaper_settings"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/desktop_wallpaper_preview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="桌面壁纸预览"
                                    android:textColor="@android:color/black"
                                    android:textSize="14sp" />


                                <FrameLayout
                                    android:layout_width="235dp"
                                    android:layout_height="125dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/wallpaper_preview"
                                    android:layout_below="@+id/desktop_wallpaper_preview">



                                    <android.support.v7.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        app:cardCornerRadius="10dp"
                                        android:layout_gravity="center">

                                        <ImageView
                                            android:id="@+id/wallpaperBackground"
                                            android:layout_width="225dp"
                                            android:scaleType="fitXY"
                                            android:layout_height="115dp" />

                                        <LinearLayout
                                            android:layout_width="215dp"
                                            android:layout_height="25dp"
                                            android:layout_gravity="center"
                                            android:background="@drawable/start_menu_item_bg"
                                            android:layout_marginTop="40dp">

                                        </LinearLayout>

                                    </android.support.v7.widget.CardView>

                                </FrameLayout>


                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="120dp">

                                <TextView
                                    android:id="@+id/lock_wallpaper_preview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="锁屏壁纸预览"
                                    android:textColor="@android:color/black"
                                    android:textSize="14sp" />

                                <FrameLayout
                                    android:layout_width="235dp"
                                    android:layout_height="125dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/wallpaper_preview"
                                    android:layout_below="@+id/lock_wallpaper_preview">


                                    <android.support.v7.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        app:cardCornerRadius="10dp"
                                        android:layout_gravity="center">

                                        <ImageView
                                            android:id="@+id/lock_pro_Background"
                                            android:layout_width="225dp"
                                            android:scaleType="fitXY"
                                            android:layout_height="115dp"/>

                                        <TextClock
                                            android:layout_width="60dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="30dp"
                                            android:layout_gravity="center">
                                        </TextClock>

                                    </android.support.v7.widget.CardView>

                                </FrameLayout>

                            </RelativeLayout>


                        </LinearLayout>

                        <android.support.v7.widget.CardView
                            android:id="@+id/wallpaper"
                            android:layout_width="match_parent"
                            android:layout_height="256dp"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="20dp"
                            app:cardCornerRadius="10dp"
                            android:layout_gravity="center">
                        </android.support.v7.widget.CardView>
                    </LinearLayout>





                
                




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/wallpaper_settings"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/windows_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wallpaper_settings"
                    android:text="桌面图标设置"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignBottom="@+id/windows_icon"
                    android:layout_marginBottom="4dp"
                    android:layout_toRightOf="@+id/windows_icon"
                    android:background="#ccc" />

                <Switch
                    android:id="@+id/desktop_icon_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/windows_icon"
                    android:checked="true"
                    android:padding="10dp"
                    android:text="图标(显示)" />

                <TextView
                    android:id="@+id/desktop_icon_hor_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/desktop_icon_switch"
                    android:padding="10dp"
                    android:text="桌面图标大小调整(竖屏)"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <SeekBar
                    android:id="@+id/desktop_icon_size_hor_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/desktop_icon_hor_size"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/desktop_icon_ver_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/desktop_icon_size_hor_seekbar"
                    android:padding="10dp"
                    android:text="桌面图标大小调整(横屏)"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <SeekBar
                    android:id="@+id/desktop_icon_size_ver_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/desktop_icon_ver_size"
                    android:padding="10dp" />
                <TextView
                    android:id="@+id/lock_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/desktop_icon_size_ver_seekbar"
                    android:text="锁屏设置"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignBottom="@+id/lock_setting"
                    android:layout_marginBottom="4dp"
                    android:layout_toRightOf="@+id/lock_setting"
                    android:background="#ccc" />

                <Switch
                    android:id="@+id/lock_show_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lock_setting"
                    android:checked="true"
                    android:padding="10dp"
                    android:text="进入桌面前看到锁屏(开启)" />




                <TextView
                    android:id="@+id/windows_lock_pro_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lock_show_switch"
                    android:padding="10dp"
                    android:text="Windows 默认锁屏预览"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/lock_lan_Background"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_below="@+id/windows_lock_pro_preview"
                    android:layout_marginBottom="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/statusBar_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lock_lan_Background"
                    android:text="状态栏显示隐藏"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignBottom="@+id/statusBar_type"
                    android:layout_marginBottom="4dp"
                    android:layout_toRightOf="@+id/statusBar_type"
                    android:background="#ccc" />

                <Switch
                    android:id="@+id/statusBarSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/statusBar_type"
                    android:checked="true"
                    android:padding="10dp"
                    android:text="(显示)状态栏" />
                <TextView
                    android:id="@+id/startMenu_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/statusBarSwitch"
                    android:text="开始菜单设定"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignBottom="@+id/startMenu_type"
                    android:layout_marginBottom="4dp"
                    android:layout_toRightOf="@+id/startMenu_type"
                    android:background="#ccc" />

                <Switch
                    android:id="@+id/showFirstAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/startMenu_type"
                    android:checked="true"
                    android:padding="10dp"
                    android:text="(显示)最近添加APP" />
                <RelativeLayout
                    android:id="@+id/startMenu_Rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:layout_below="@+id/showFirstAdd"
                    android:background="@drawable/control_startmenu_bg">

                    <TextView
                        android:id="@+id/startMenuDemo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="开始菜单模型"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:background="#99000000"/>
                    <Switch
                        android:id="@+id/orientationChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/startMenuDemo"
                        android:layout_centerHorizontal="true"
                        android:checked="true"
                        android:padding="10dp"
                        android:text="开始菜单(竖)屏设置" />
                    <TextView
                        android:id="@+id/start_menu_width"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/orientationChange"
                        android:padding="10dp"
                        android:text="开始菜单宽度调整"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <SeekBar
                        android:id="@+id/start_menu_width_seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/start_menu_width"
                        android:padding="10dp" />
                    <TextView
                        android:id="@+id/start_menu_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/start_menu_width_seekBar"
                        android:padding="10dp"
                        android:text="开始菜单高度调整"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <SeekBar
                        android:id="@+id/start_menu_height_seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/start_menu_height"
                        android:padding="10dp" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/operation_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/startMenu_Rect"
                    android:text="操作中心设定"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignBottom="@+id/operation_type"
                    android:layout_marginBottom="4dp"
                    android:layout_toRightOf="@+id/operation_type"
                    android:background="#ccc" />

                <Switch
                    android:id="@+id/enableTablet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/operation_type"
                    android:checked="true"
                    android:padding="10dp"
                    android:text="手机也可以(启用)平板模式" />




            </LinearLayout>


            </RelativeLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>


